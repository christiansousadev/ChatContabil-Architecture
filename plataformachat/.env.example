# ==========================================
# Configurações do Servidor de Desenvolvimento (Vite)
# ==========================================
VITE_SERVER_HOST=0.0.0.0
VITE_SERVER_PORT=80
VITE_ALLOWED_HOSTS=localhost,seu-dominio.com.br

# ==========================================
# Integração com a API Backend
# ==========================================
# URL base onde o servidor Node.js está rodando
VITE_API_URL=http://localhost:4000

# Endpoint específico para execução de webhooks/rotinas de IA
VITE_WEBHOOK_URL=http://localhost:4000/api/executar

# ==========================================
# Ambiente e Proxy
# ==========================================
VITE_NODE_ENV=development

# Configurações de Proxy para contornar problemas de CORS em desenvolvimento
VITE_PROXY_CHANGE_ORIGIN=true
VITE_PROXY_SECURE=false
