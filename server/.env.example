# ==========================================
# Configurações de Banco de Dados (PostgreSQL)
# ==========================================
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=nome_do_banco
DB_USER=usuario_db
DB_PASSWORD=sua_senha_segura
DB_SCHEMA=public
# DB_SSL=true 

# ==========================================
# Autenticação e Segurança (JWT e Criptografia)
# ==========================================
JWT_SECRET=insira_uma_chave_secreta_aqui_para_producao
JWT_EXPIRES=5h
INTEGRATIONS_ENC_KEY=base64:insira_chave_de_criptografia_aqui=

# ==========================================
# Configurações de Rede e API
# ==========================================
PORT=4000
NODE_ENV=development
API_BASE_URL=http://local.seudominio.com
API_SELF_BASE=http://localhost:4000
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# ==========================================
# Integração com Microsserviço Python (IA/RAG)
# ==========================================
PY_URL=http://127.0.0.1:8000
NLP_CONFIG_PATH=../iapython/rag/nlp_config.json

# ==========================================
# Modelos de Linguagem (LLM Local / Ollama)
# ==========================================
PHI3_URL=http://localhost:11434/api/generate
PHI3_MODEL=phi3:mini
LOG_LLM_TEXT_MAX=3000
LOCAL_EXPLAIN_MODE=llm # llm | deterministic
LLM_BALANCETE_MODE=llm # llm | auto | deterministic

# ==========================================
# Regras de Negócio e Agendamentos
# ==========================================
DRE_FETCH_TIMEOUT_MS=120000
REPORT_STORAGE_DIR=./storage/reports
REPORT_SCHEDULER_INTERVAL_MS=30000
