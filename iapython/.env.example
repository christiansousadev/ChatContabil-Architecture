# ==========================================
# Infraestrutura do Banco de Dados Principal (PostgreSQL)
# ==========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=chatcontabil_db
DB_USER=postgres
DB_PASSWORD=sua_senha_segura

# ==========================================
# Conexão com Sistema Contábil Legado (Firebird/Athenas)
# ==========================================
FB_HOST=localhost
FB_PORT=3050
FB_DATABASE=/caminho/para/seu/banco/athenas.fdb
FB_USER=SYSDBA
FB_PASSWORD=masterkey
FB_CHARSET=ISO8859_1
FB_LOG_SQL=basic # off | basic | full

# ==========================================
# Configurações de IA e RAG (Retrieval-Augmented Generation)
# ==========================================
NLP_CONFIG=./iapython/rag/nlp_config.json
PY_URL=http://localhost:8000
DEBUG_SQL=0
APP_TZ=America/Fortaleza

# ==========================================
# Regras de Negócio: DRE (Demonstrativo de Resultado do Exercício)
# ==========================================
DRE_CODIGO_EMPRESA=1
DRE_CODIGO_FILIAL=1
DRE_PLAN_ID=0                 # 0 = Automático (TABEMPRESAS)
DRE_DATA_INI=2024-01-01
DRE_DATA_FIM=2024-12-31

# Flags de Cálculo Contábil
DRE_TODAS_FILIAIS=-1          # 1=Sim, 0=Não
DRE_SEM_ENCERRAMENTO=1        # Filtro de lançamentos de encerramento
DRE_INICIAL_RECEITA=0,2,6     # Prefixos de contas de receita
DRE_INICIAL_DESPESA=0,2,6     # Prefixos de contas de despesa
DRE_MODEL_STRATEGY=prefer-real 
DRE_MOSTRAR_ZERADOS=0
DRE_EPS=0.004                 # Tolerância para arredondamentos

# ==========================================
# Segurança e CORS
# ==========================================
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
